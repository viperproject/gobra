func dfltTest() {
	var s1 string
	s2 := ""
	assert s1 == s2
}

func lenTest() {
	h1 := "hello"
	h2 := "world"
	assert len(h1) == 5
	assert len(h2) == 5
	assert len(h1 + h2) == 10
}

func sharedStrTest() {
	s@ := "test"
	res := getStr(&s)
	assert res == "test"
}

func stringEqTest() {
	h1 := "hello"
	var h2 = "hello"
	assert h1 == h2

	var h3 string = "heooo"
	assert h1 != h3
}

func id(s string) string {
	return s
}

requires acc(s, 1/2)
ensures acc(s, 1/2)
ensures res == *s
func getStr(s *string) (res string) {
	return *s
}

func comp(s1, s2 string) int {
	if s1 == s2 {
		return 0
	} else if s1 < s2 {
		return -1
	} else {
		return 1
	}
}

requires 0 < len(s)
decreases
func convStringBytesIndexing(s string) {
	sl := []byte(s)
	assert sl[0] == s[0]
}

requires 0 < len(s)
requires acc(s)
decreases
func convBytesStringIndexing(s []byte) {
	str := string(s)
	assert str[0] == s[0]
}