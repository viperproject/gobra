requires 0 <= pos && pos <= end
requires forall n int :: 0 <= n && n < len(s) ==> acc(&s[n], _)
requires end < len(s)
pure func validParent(s []int, end, pos int) bool {
  return (leftChild(pos) <= end ==> s[leftChild(pos)] <= s[pos]) && (rightChild(pos) <= end ==>  s[rightChild(pos)] <= s[pos])
}

