ensures t.tree()
func client0(value int) (t *Tree) {
    t = NewTree()
    assert !t.pureContains(value, 2)
    t.Insert(value)
    assert t.sortedValues() == seq[int]{ value }
    t.Delete(value)
    assert !t.pureContains(value, 2)
    return t
}

