package zune

decreases
pure func isLeapYear(year int) bool {
  return year % 4 == 0 && (year % 100 != 0 || year % 400 == 0)
}

const originYear = 1980

ensures days <= 366
decreases
func convertDaysFixed(totalDays int) (days, year int) {

  days = totalDays
  year = originYear
  
  //:: ExpectedOutput(Loop_termination_error)
  decreases days - 366, days - 365
  for (isLeapYear(year) && 366 < days) || (!isLeapYear(year) && 365 < days) {

    ghost variant := days
    assert variant >= 0

    if isLeapYear(year) {
      //days -= 366
      days = days
    } else {
      days -= 365
    }
    year += 1

    //assert days < variant
  }
  return
}


ensures days + (year - originYear) * 365 <= totalDays
ensures totalDays <= days + (year - originYear) * 366
ensures days <= 366
decreases
func convertDaysFixedWithSomeInvariants(totalDays int) (days, year int) {

  days = totalDays
  year = originYear

  invariant days + (year - originYear) * 365 <= totalDays
  invariant totalDays <= days + (year - originYear) * 366
  decreases days - 366, days - 365
  for (isLeapYear(year) && 366 < days) || (!isLeapYear(year) && 365 < days) {

    ghost variant := days
    assert variant >= 0

    if isLeapYear(year) {
      days -= 366
    } else {
      days -= 365
    }
    year += 1

    assert days < variant
  }
  return
}
