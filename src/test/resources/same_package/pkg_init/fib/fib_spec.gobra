package fib

ghost
pure
requires 0 <= n
decreases n
func FibSpec(n int) int {
	return n <= 1 ? 1 : FibSpec(n-1) + FibSpec(n-2)
}

pred StaticInv() {
	acc(&cache, _)     &&
	acc(cache)         &&
	0 in domain(cache) &&
	1 in domain(cache) &&
	forall i int :: { cache[i] }{ FibSpec(i) }{ i in domain(cache) } i in domain(cache) ==>
		0 <= i && cache[i] == FibSpec(i)
}