package refutation

func f() {
    //:: ExpectedOutput(refute_error:refutation_true_error)
	refute true
}

func g() {
    assume false
    //:: ExpectedOutput(refute_error:refutation_true_error)
    refute false
}

requires x > 0
func h(x int) {
    //:: ExpectedOutput(refute_error:refutation_true_error)
	refute x > 0
}

requires acc(x)
func i(x *int) {
    //:: ExpectedOutput(refute_error:refutation_true_error)
