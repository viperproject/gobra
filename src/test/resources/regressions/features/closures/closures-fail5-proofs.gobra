func test4() {
    cl :=
        requires x >= 10
        ensures y == x
        pure func id(x int)(y int) {
            return x
        }

    cl1 :=
        requires x >= 0
        ensures y == x
        pure func id1(x int)(y int) {
            return x
        }

    //:: ExpectedOutput(type_error)
    proof cl implements pspec {
        //:: ExpectedOutput(type_error)
        x = 2 // assignment in ghost code to a non-ghost variable
        y = cl1(x) as id1
    }
}

