ghost
requires n >= 0
decreases n
func factorial(n int) int {
  if n == 0 {
    return 1
  } else {
    return factorial(n-1)
  }
}

ghost
requires m >= 0
requires n >= 0
ensures result >= 0
decreases m,n
func ack(m int, n int) (result int) {
  if m == 0 {
    return n+1 
  } else {
    if n == 0 {
      ack(m-1, 1)
    } else {   
      ack(m-1, ack(m, n - 1))
    }
  }
}

