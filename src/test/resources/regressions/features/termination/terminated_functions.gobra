ghost
requires 0 <= n
ensures res == n * (n + 1) / 2
decreases
func sum(n int) (res int) {
  res := 0
  invariant i <= (n + 1)
  invariant res == (i - 1) * i / 2
  decreases n-i
  for i:=0; i<=n; i++ {
    res = res + i
  }
  return res
}

