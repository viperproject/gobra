requires this != nil ==> (acc(&this.x) && acc(&this.y));
ensures acc(&res.x) && acc(&res.y);
func (this *Point) idOrNew() (res *Point) {
  if this == nil {
    res = &Point{0,0};
  } else {
    res = this;
  };
};

func idClient() {
  var p *Point;
  assert p == nil;
  q := p.idOrNew();
  q.x = 5;
};

