package closuresFail5Proofs

ghost
requires x >= 0
pure func pspec(x int) (y int)

func test1() {
    cl :=
        requires x >= 0
        ensures y == x
        func id(x int)(y int) {
            return x
        }

    proof cl implements pspec {
        // The spec is pure, the call is not
        //:: ExpectedOutput(type_error)
        return cl(x) as id
    } 
}

func test2() {
    cl :=
        requires x >= 0
        ensures y == x
        pure func id(x int)(y int) {
            return x
        }
    //:: ExpectedOutput(type_error)
    proof cl implements pspec {
        y = cl(x) as id
    } 
}

