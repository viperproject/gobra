package pkg

pure func parent (i int) int {
  return (i - 1) / 2
}

pure func leftChild (i int) int {
  return 2 * i + 1
}

pure func rightChild (i int) int {
  return 2 * i + 2
}

ghost
pure func descendant (p int, q int) bool {
  return p == q || (p <= q && descendant(p, parent(q)))
}

