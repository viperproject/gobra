package issues

preserves acc(x)
ensures   *x == old(*x) + 1
ensures !res
func incF(x *int) (res bool) {
	*x += 1
	return false
}

func clientAdd() {
	x@ := 1
	if incF(&x) && incT(&x) {
		assert false
	}
	assert x == 2
}

preserves acc(x)
ensures   *x == old(*x) + 1
ensures res
func incT(x *int) (res bool) {
	*x += 1
	return true
}

func clientOr() {
	x@ := 1
	if incT(&x) || incT(&x) {}
	assert x == 2
}