preserves acc(x)
requires len(x) > 0
ensures forall i int :: 0 <= i && i < len(x) ==> max >= x[i]
decreases
func foo(x []uint) (max uint) {
	max = x[0]
	invariant acc(x)
	invariant 0 <= i && i <= len(x)
	invariant forall k int :: 0 <= k && k < i0 ==> max >= x[k]
	decreases len(x) - i0
	for i, j := range x with i0 {
		if j > max {
			max = j
		}
	}
}

func foo_arr() {
	x := [4]uint{1, 2, 3, 4}
	max := x[0]
	invariant 0 <= i && i <= len(x)
	invariant forall k int :: 0 <= k && k < i0 ==> max >= x[k]
	for i, j := range x with i0 {
		if j > max {
			max = j
		}
	}
	assert forall i int :: 0 <= i && i < len(x) ==> max >= x[i]
}

decreases
func bar() {
