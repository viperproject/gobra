ensures res ==> (typeOf(n) == *variable || typeOf(n) == *constant || typeOf(n) == *addition)
func isAstNode(n node) (res bool) {
  if v, ok := n.(*variable); ok {
    return true
  } else if c, ok := n.(*constant); ok {
    return true
  } else if a, ok := n.(*addition); ok {
    return true
  } else {
    return false
  }
}