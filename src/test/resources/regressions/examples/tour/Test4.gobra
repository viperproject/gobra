package trivial;

type Point struct {
  x int;
  y int;
};

requires acc(&p.x);
pure func (p *Point) getX1() int {
  return p.x;
};

requires acc(&p.x);
ensures  acc(&p.x) && res == old(p.x) && p.x == old(p.x);
func (p *Point) getX2() (res int) {
  res = p.x;
};

func client() {
  p@ := Point{5, 7};
  x := (&p).getX2();
  assert x == 5;
  y := p.getX2();
  assert y == 5;
  assert ((&p).getX1()) == 5;
};


