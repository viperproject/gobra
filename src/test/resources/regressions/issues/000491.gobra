package main

type A struct {
	x int
}

func test1() {
	var x *A
	//:: ExpectedOutput(dereference_error:receiver_is_nil_error)
	var y *A = &(*x)
}

func test2() {
	var x *[3]int
	//:: ExpectedOutput(dereference_error:receiver_is_nil_error)
	var y []int = (*x)[:]
}

requires x != nil
